<div class="container" style="margin-left: 459px">
  <h3 style="color: #614a4e;margin-left: 17px">Address</h3>
  <div class="col-sm-3 col-md-6 col-lg-4" style="color:black">
    <%= form_for @address do |add|%>
      <%= render "devise/shared/error_messages", resource: @address %>
      <div class="form-group" >
       	<%= add.label :flat_no %><br />
        <%= add.text_field :flat_no,class: "form-control" , style: "rows:8;cols:50"%>
      </div>
      <div class="form-group" >
        <%= add.label :location %><br />
        <%= add.text_area :location,class: "form-control" %>
      </div>
      <div class="form-group" >
        <%= add.label :landmark %><br />
        <%= add.text_field :landmark,class: "form-control" %>
      </div>
      <div class="form-group" >
        <%= add.label :city %><br />
        <%= add.text_field :city,class: "form-control" %>
      </div>
      <div class="form-group" >
        <%= add.label :address_type %><sub>(not mandatory)</sub><br />	
        <%= add.text_field :address_type,class: "form-control"%>
      </div>
        <%= add.submit 'Add address',class: "btn btn-inverse", style: 'width:-webkit-fill-available;background-color:#333;color:black;' %>
    <% end %>
  </div>
</div>