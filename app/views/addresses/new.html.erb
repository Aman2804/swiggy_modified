<%#binding.pry%>
<%= form_for @address do |add|%>
  <%= render "devise/shared/error_messages", resource: @address %>
  <%= add.label :location %><br />
  <%= add.text_area :location %><br />
 	<%= add.label :flat_no %><br />
  <%= add.text_field :flat_no %><br />
  <%= add.label :city %><br />
  <%= add.text_field :city %><br />
  <%= add.label :landmark %><br />
  <%= add.text_field :landmark %><br />
  <%= add.label :address_type %><sub>(not mandatory)<sub/><br />	
  <%= add.text_field :address_type %><br />
  <%= add.submit 'Add address'%>
<% end %>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>