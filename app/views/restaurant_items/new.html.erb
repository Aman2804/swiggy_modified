<a href="<%= restaurants_path(current_user)%>" style="color: white;font-size:x-large"><i class="fa fa-arrow-left" aria-hidden="true">Back</i></a>
<h3 style="color: white;margin-left: 17px">Add to menu</h3>
<div class="col-sm-3 col-md-6 col-lg-4" style="color:black">
<% item_num = 0 %>
	<% @item.each do |item|%>
		<% if @restaurant.restaurant_items.select{|obj| obj.item == item}.empty? %>
			<b><%= item_num = item_num + 1%>.<%= item.name %></b>
			<%= form_for @restaurant_item do |restaurant_item|%>
			<div class="form-group">
				<%= restaurant_item.label :Price %>
				<%= restaurant_item.text_field :price,class: "form-control",style: "width:auto" %>
			</div>
				<%= restaurant_item.hidden_field :item, :value => item.id %>
				<%= restaurant_item.submit 'Add' ,class: "btn btn-primary", style: 'background-color:#333'%><br>
			<% end %><br>
		<% end %>	
	<% end %>
<% if item_num == 0 %>
	<h4>All present item are in menu</h4>
<% end %>
<a href="<%= new_item_path %>" ><i class="fa fa-plus fa-2x" aria-hidden="true" style="color: #333">Add New Item</i></a>
	</div>