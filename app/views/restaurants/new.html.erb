<div class="container" style="margin-left: 459px">
  <h3 style="color: #614a4e;margin-left: 17px">Add New Restaurant</h3>
  <div class="col-sm-3 col-md-6 col-lg-4" style="color:black">
  	<%= form_for @restaurant do |restaurant|%>
	  	<div class="form-group" >
				<%= restaurant.label :Restaurant_Name %>
				<%= restaurant.text_field :name ,class: "form-control"%>
			</div>
			<div class="form-group" >
				<%= restaurant.label :designation%>
				<%= restaurant.select(:designation, options_for_select([['Owner', 'owner'], ['Manager', 'manager']],'owner'), {}, {class: "btn btn-primary dropdown-toggle ", style: 'width:-webkit-fill-available;background-color:#333'}) %>
			</div>
			<%= restaurant.submit "submit", class: "btn btn-primary", style: 'width:-webkit-fill-available;background-color:#333' %>
		<% end %>
  </div>
</div>