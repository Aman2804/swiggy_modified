<div class="container" style="margin-left: 459px">
  <h3 style="color: #614a4e;margin-left: 17px">New Item</h3>
  <div class="col-sm-3 col-md-6 col-lg-4" style="color:black">
		<%= form_for @item do |item| %>
			<div class="form-group">
				<%= item.label :Item_name %>
				<%= item.text_field :name ,class: "form-control" %>
			</div>
			<div class="form-group" >
				<%= item.label :Category %>
				<%= item.text_field :category ,class: "form-control" %>
			</div>
			<div class="form-group" >
				<%= item.label :Item_type %><br />
				<%= item.select(:type_of_dish, options_for_select([['Veg','veg'],['Non-veg','non-veg']],'veg'), {}, {class: "btn btn-primary dropdown-toggle ", style: 'width:-webkit-fill-available;background-color:#333'})%><br />
			</div>
			<%= item.submit 'Make a change',class: "btn btn-primary", style: 'width:-webkit-fill-available;background-color:#333'%>
		<% end %>
  </div>
</div>