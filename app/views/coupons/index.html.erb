<h1>Coupons</h1>

<table style="table-layout:fixed;width:-webkit-fill-available;">
  <thead>
    <tr>
      <th>Condition</th>
      <th>Coupon name</th>
      <th>Per off</th>
      <th style="width: auto">Type of coupon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.condition %></td>
        <td><%= coupon.coupon_name %></td>
        <td><%= coupon.per_off %></td>
        <td><%= coupon.type_of_coupon %></td>
        <td>
          <a href="<%= edit_coupon_path(coupon) %>" ><i class="fa fa-pencil fa-2x" aria-hidden="true" style="color: black" ></i></a>&nbsp;
          <a href="<%= coupon_path(coupon) %>" data-method="delete" onclick="return confirm('Are you sure?')" ><i class="fa fa-trash fa-2x" aria-hidden="true" style="color: red" ></i></a>
        </td>
        <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coupon', new_coupon_path %>
