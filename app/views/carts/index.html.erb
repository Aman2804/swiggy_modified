
<% @cart_items.each do |cart_item| %>
  <% restaurant_item = cart_item.restaurant_item %>
  <%= restaurant_item.item.name %><br>
  <%= restaurant_item.item.category %><br>
  <%= restaurant_item.item.type_of_dish %><br>
  <b><%= restaurant_item.restaurant.name %></b><br>
  Number of Items <%= cart_item.num_of_item %><br>
  <%= link_to 'Edit', edit_cart_path(current_user,current_user.cart),method: :get %>
  <%= link_to 'Destroy', cart_item_path(cart_item), method: :delete, data: { confirm:
          'Are you sure?' }, :remote => true, :class => 'delete_cart_item' %><br><br>
<% end %>
<% [].each do |item|%>
  <%# (@cart_items.length).times do |place|%>
    <h4>
      <%# item = Item.find(@restaurant.id) %>
      Name:<%= item.name%><br/>
      Category:<%= item.category %><br/>
      Type:<%= item.type_of_dish %><br/>
      price:<%= item.restaurant_items.first.price %><br/>
      Quantity:<%#= @cart_items[place].num_of_item%>
      <% total += item.restaurant_items.first.price*@cart_items[place].num_of_item %>
      <%= button_to 'Edit', edit_cart_path(current_user,current_user.cart),method: :get %>
      <%= button_to 'Destroy', cart_item_path(@cart_items[place].id), method: :delete, data: { confirm:
          'Are you sure?' }, :remote => true, :class => 'delete_cart_item' %>
    </h4>
  <%# end %>
<% end %>
<h2>
  Total:<%#= total %>
</h2>
<%=select_tag(:type_of_pay, options_for_select([['Cash', 'cash']],'cash')) %>
